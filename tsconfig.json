{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    // "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["vite/client"],
    "allowJs": true
    // "baseUrl": "."
    // "paths": {
    //   "@/*": ["src/*"]
    // }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/env.d.ts",
    "src/histoire.setup.ts"
  ]
}
